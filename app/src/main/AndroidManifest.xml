<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.jalxp.easylist">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyList">
        <activity
            android:name=".ui.measurementUnits.AddMeasurementUnitActivity"
            android:label="@string/title_activity_add_measurement_unit"
            android:theme="@style/Theme.EasyList.NoActionBar"></activity>
        <activity
            android:name=".ui.categories.AddCategoryActivity"
            android:theme="@style/Theme.EasyList.NoActionBar" />
        <activity
            android:name=".ui.products.AddProductActivity"
            android:theme="@style/Theme.EasyList.NoActionBar" />
        <activity
            android:name=".ui.shoppingList.SingleListActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.EasyList.NoActionBar" />
        <activity
            android:name=".ui.shoppingList.AddShoppingListActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.EasyList.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.EasyList.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>